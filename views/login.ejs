<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
<title>Charlotte Today</title>
<link rel="stylesheet" type="text/css" href="/assets/stylesheets/style.css">

</head>
<body>

  <%- include ('partials/header3.ejs') -%>
 	<%- include ('partials/nav3.ejs') -%>

  <div class="login">
    <h1>Login to our website</h1>
    <form method="post" action="/login">
      <% if (locals.error) { %>
<p><label class="errorMsg">Invalid username or password</label></p> <% } %>
      <p><input type="text" name="username" value="" placeholder="Email" required></p>
      <p><input type="password" name="password" value="" placeholder="Password" required></p>
      <p class="remember_me">
        <label>
          <input type="checkbox" name="remember_me" id="remember_me">
          Remember me
        </label>
      </p>
      <p class="submit"><input type="submit" name="commit" value="Login"></p>
    </form>
  </div>

  <div class="login-help">
    <p>Forgot your password? <a href="#">Click here to reset it</a>.</p>
  </div>

<br><br><br>
  <%- include ('partials/footer.ejs') -%>
</body>
</html>
